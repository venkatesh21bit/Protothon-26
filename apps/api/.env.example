# Backend Environment Variables
ENV=development
DEBUG=True

# API
API_V1_PREFIX=/api/v1

# Security (CHANGE IN PRODUCTION)
JWT_SECRET=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ── Google Gemini (LLM + STT + NLU) ──────────────────────────────────────────
# Free tier: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-3-flash-preview

# ── PostgreSQL (Railway addon or local) ──────────────────────────────────────
# Railway provides this automatically as DATABASE_URL when you add a Postgres plugin
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nidaan

# ── Local File Storage ────────────────────────────────────────────────────────
# Directory where uploaded audio files are saved.
# On Railway, mount a persistent volume at this path.
STORAGE_PATH=./uploads

# ── Email (Gmail SMTP — free) ─────────────────────────────────────────────────
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# Nurse station alert recipient
NURSE_STATION_EMAIL=nurse.station@hospital.com

# App base URL (used in survey email links)
APP_BASE_URL=http://localhost:3000

# ── Redis (Railway addon or local) ───────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── CORS ─────────────────────────────────────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
